<!-- products.handlebars -->
<div id="header">
  <a href="/carts/{{user.cart._id}}" class="cart-logo">
    <img src="img/logoCarrito.png" alt="Logo Carrito">
  </a>
</div>

<div>
  <h2>Bienvenido, {{user.name}}!!</h2>
</div>

{{#each products}}
  <div class="product">
    <h2>{{name}}</h2>
    <p>Precio: {{price}}</p>
    <p>Categor√≠a: {{category}}</p>
    <button onclick="window.location='/products/{{_id}}'">Ver detalles</button>
    <form id="aggCarrito" data-user-cart="{{user.cart._id}}" method="get">
      <button type="submit" class="addToCartButton">Agregar al carrito</button>
      <input type="hidden" name="productId" value="{{_id}}">
  </form>
  </div>
{{/each}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>